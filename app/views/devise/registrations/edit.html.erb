<div class="col-md-6 col-md-offset-3">
<h2>更改密码</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <p>我的邮箱： <%= @user.email %></p>
    <p>昵称： <%= @user.name %></p>
    <!-- <%= f.input :email, required: true, autofocus: true %>
    <%= f.input :name, require: true, autofocus: true, label: "昵称" %> -->
    <%= f.input :avatar, :label => "用户头像", as: :file %>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>
<br>
    <%= f.input :password, autocomplete: "off", required: false %>如果不更改，请留白
    <%= f.input :password_confirmation, required: false %>
    <br>

  </div>
<br>

  <div class="form-actions">
    <%= f.input :current_password, required: true %>输入当前密码以确定更改
    <%= f.button :submit, "更新", class: "btn btn-info" %>
  </div>
<% end %>

<h3>删除我的账号</h3>

<p>不满意？ <%= link_to "删除我的账号", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "fa fa-trash" %></p>

<%= link_to "返回", :back %>
</div>

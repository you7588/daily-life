<%= simple_form_for @orid do |f| %>
<div class="form-group">
<%= f.input :title, input_html: { class: "form-control"} %>
</div>

<div class="btn-group data-toggle="buttons"">
  <% Orid::STATUS.each do |status| %>
    <label class="btn btn-default">
      <%= f.radio_button :status, status %>
      <%= t(status, :scope => "orid.status") %>
    </label>
  <% end %>
</div>

<div class="form-group">
  <h4>客观事实层次：我们的感官所接收到的外在现实【计划+所做的事】</h4>
<%= f.input :objective, as: :ckeditor, input_html: {  ckeditor: { toolbar: 'mini' }}, :label => "_" %>
</div>
<div class="form-group">
  <h4>感觉反应层次：我们对所接收到的事物的反应</h4>
<%= f.input :reflective, as: :ckeditor, input_html: {  ckeditor: { toolbar: 'mini' }}, :label => "-" %>
</div>
<div class="form-group">
  <h4>诠释层次：我们的感官和反应的意义和重要性</h4>
<%= f.input :interpretive, as: :ckeditor, input_html: {  ckeditor: { toolbar: 'mini' }}, :label => "-" %>
</div>
<div class="form-group">
  <h4>决定层次：我们的打算</h4>
<%= f.input :decisional, as: :ckeditor, input_html: {  ckeditor: { toolbar: 'mini' }}, :label => "-" %>
</div>

<%= f.submit "Submit", class: "btn btn-primary", data: { disable_with: "Submiting..."} %>

<% end %>

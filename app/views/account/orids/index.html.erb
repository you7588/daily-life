<div class="col-md-10">
  <h2 class="text-center">我的ORID</h2>

  <table class="table">
    <thead>
      <tr>
        <th>#</th>
        <th>标题</th>
        <th>状态</th>
        <th>留言数量</th>
        <th>更新时间</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @orids.each do |orid| %>
      <tr>
        <td>#</td>
        <td><%= link_to(orid.title, orid_path(orid)) %></td>
        <td><%= t(orid.status, :scope => "orid.status") %></td>
        <td><%= orid.posts.count %></td>
        <td><%= orid.updated_at %></td>
        <td>
          <%= link_to("Edit", edit_orid_path(orid), class: "btn btn-sm btn-default") %>
          <%= link_to("Destroy", orid_path(orid), class: "btn btn-sm btn-default",
                        :method => :delete, :data => { :confirm => "Are you sure?" }) %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
